<form action="addsalary" method="POST">
  <div class="container">

    <label for="position" class="required">Position</label>
    <input
      type="text"
      id="position"
      placeholder="Full stack, Ui, etc"
      name="position"
      value="{{salary.position}}"
    />
    <div class="text-danger">
      {{salary.positionError}}
    </div>

    <label for="company">Company</label>
    <input
      type="text"
      id="company"
      placeholder=""
      name="company"
      value="{{salary.company}}"
    />

    <label for="salary">Salary</label>
    <input
      type="number"
      id="salary"
      placeholder=""
      name="salary"
      value="{{salary.salary}}"
    />
    <div class="text-danger">
      {{salary.salaryError}}
    </div>

    <label for="expiernce" class="required">Expiernce</label>
    <input
      type="text"
      name="expiernce"
      placeholder="5 years, 6 months, etc"
      value="{{salary.expiernce}}"
    />
    <div class="text-danger">
      {{salary.expiernceError}}
    </div>
    <label for="education" class="required">Education</label>
    <input
      type="text"
      name="education"
      placeholder="BA in art, BSc in CS, etc"
      value="{{salary.education}}"
    />
    <div class="text-danger">
      {{salary.educationError}}
    </div>
    <label for="age" class="required">Age</label>
    <input type="number" id="age" name="age" value="{{salary.age}}" />
    <div class="text-danger">
      {{salary.ageError}}
    </div>
    <label for="gender" class="required">Gender</label>
    <select name="gender" id="gender">
      <option value="" disabled selected>Select your option</option>
      <option value="Male">Male</option>
      <option value="Female">Female</option>
      <option value="Other">Other</option>
    </select>
    <div class="text-danger">
      {{salary.genderError}}
    </div>
    <label for="notes">Notes</label>
    <input
      type="text"
      id="notes"
      placeholder="Benefits, Options, Cibus, etc"
      name="notes"
      value="{{salary.notes}}"
    />
    {{!-- <div class="text-danger">
            {{salary.notesError}}
        </div> --}}

    <button type="submit">Submit</button>
    <a href="/salary" class="homePage">Home</a>

  </div>
</form>

